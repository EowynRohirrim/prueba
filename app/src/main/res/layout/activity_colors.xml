<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<TextView
    android:id="@+id/tittleColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Paleta de colores"
    android:textAlignment="center"
    app:flow_verticalAlign="center"
    android:background="@color/black"
    android:textSize="24dp"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textAllCaps="true"
    android:height="100dp"
    ></TextView>


    <androidx.cardview.widget.CardView
        android:id="@+id/H1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tittleColor"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/background_app">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H1 (20%)"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/H2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/H1"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/background_app">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H2 (50%)"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/H3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/H2"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/background_app">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H3 (80%)"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </androidx.cardview.widget.CardView>



    <!-- RecyclerView Horizontal -->
    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvColorsH"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        app:layout_constraintBottom_toTopOf="notonchangecolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tittleColor"
        />


<androidx.cardview.widget.CardView
    android:id="@+id/btnChangeColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></androidx.cardview.widget.CardView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_margin="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cambiar color"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="24dp"
            >

        </Button>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>